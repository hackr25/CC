/*
* File name: RMIDigitToWordApplication.java
* This file contains the interface, server, and client code for converting digits to words using RMI
* Compile all: javac Jitesh_248742_InterConvert.java Jitesh_248742_ServerConvert.java Jitesh_248742_ClientConvert.java
* Run in separate terminals:
* 1. Start RMI registry: rmiregistry
* 2. Run server: java Jitesh_248742_ServerConvert
* 3. Run client: java Jitesh_248742_ClientConvert
*/

// RMI Interface
import java.rmi.*;

public interface Jitesh_248742_InterConvert extends Remote {
    public String convertDigit(String no) throws Exception;
}

// RMI Server
import java.rmi.*;
import java.rmi.server.*;

public class Jitesh_248742_ServerConvert extends UnicastRemoteObject
implements Jitesh_248742_InterConvert {
    public Jitesh_248742_ServerConvert() throws Exception { }

    public String convertDigit(String no) throws Exception {
        String str = "";
        for(int i = 0; i < no.length(); i++) {
            int p = no.charAt(i);
            if(p == 48) {
                str += "zero ";
            }
            if(p == 49) {
                str += "one ";
            }
            if(p == 50) {
                str += "two ";
            }
            if(p == 51) {
                str += "three ";
            } 
            if(p == 52) {
                str += "four ";
            } 
            if(p == 53) {
                str += "five ";
            } 
            if(p == 54) {
                str += "six ";
            } 
            if(p == 55) {
                str += "seven ";
            } 
            if(p == 56) {
                str += "eight ";
            } 
            if(p == 57) {
                str += "nine ";
            }
        } 
        return str;
    }

    public static void main(String args[]) throws Exception {
        Jitesh_248742_ServerConvert s1 = new Jitesh_248742_ServerConvert();
        Naming.bind("Wrd", s1);
        System.out.println("Object registered.");
    }
}

// RMI Client
import java.rmi.*;
import java.io.*;

public class Jitesh_248742_ClientConvert {
    public static void main(String args[]) throws Exception {
        Jitesh_248742_InterConvert h1 = (Jitesh_248742_InterConvert)Naming.lookup("Wrd");
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        
        System.out.println("Enter a number : \t");
        String no = br.readLine();
        
        String ans = h1.convertDigit(no);
        System.out.println("The word representation of the entered digit is: " + ans);
    }
}
